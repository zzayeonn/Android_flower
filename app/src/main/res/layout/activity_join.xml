<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinActivity">

    <EditText
        android:id="@+id/et_namejoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:ems="15"
        android:hint="이름"
        android:inputType="textPersonName"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_numberjoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="15"
        android:hint="핸드폰번호"
        android:inputType="textPersonName"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/et_namejoin"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/et_namejoin"
        app:layout_constraintTop_toBottomOf="@+id/et_namejoin" />

    <Button
        android:id="@+id/btn_yesjoin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:background="@color/blue_dark"
        android:text="가입하기"
        app:layout_constraintStart_toStartOf="@+id/et_numberjoin"
        app:layout_constraintTop_toBottomOf="@+id/et_numberjoin" />

    <Button
        android:id="@+id/btn_nojoin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:background="@color/blue_dark"
        android:text="취소"
        app:layout_constraintEnd_toEndOf="@+id/et_numberjoin"
        app:layout_constraintTop_toBottomOf="@+id/et_numberjoin" />

</androidx.constraintlayout.widget.ConstraintLayout>